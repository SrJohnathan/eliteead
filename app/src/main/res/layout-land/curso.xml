<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/tools"
    android:id="@+id/animacao"
    app:cardElevation="5dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/md_white_1000">

        <FrameLayout
            android:id="@+id/contai"
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/progss"
                android:indeterminate="true"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/menuimg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                fresco:actualImageScaleType="focusCrop"
                fresco:fadeDuration="300"/>

        </FrameLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/constra"
            android:layout_below="@+id/contai"
            >

            <ead.elite.app.br.com.appelite.ead.componets.MyTextViewArial
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@color/md_light_blue_600"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Informaica"
                android:textSize="20dp" />



            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/titulo"
                 />

            <TextView
                android:id="@+id/cate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginLeft="20dp"
                android:paddingRight="10dp"
                android:text="Categoria"
                android:textAppearance="?android:attr/textAppearanceSmall"
                 />

            <TextView
                android:id="@+id/tempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cate"
                android:layout_marginLeft="20dp"
                android:text="40hrs"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 />

            <ead.elite.app.br.com.appelite.ead.componets.MyTextViewArial
                android:id="@+id/preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/view"
                android:fontFamily="bold"
                android:paddingRight="10dp"
                android:text="R$999,99"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/md_red_500"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tempo"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:isIndicator="true"
                android:minHeight="24dp"
                android:minWidth="54dp"
                android:numStars="5"
                android:rating="2.5" />

            <TextView
                android:id="@+id/inscritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tempo"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:text="549 Inscritos"
                android:textStyle="italic" />





            <!--   <com.bluejamesbond.text.DocumentView xmlns:document="http://schemas.android.com/apk/res-auto"
                   android:id="@+id/apresen"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/linearLayout"
                   android:layout_toRightOf="@+id/profile_image"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   document:text="@string/teclas"
                   document:textAlignment="justified"
                   document:textSize="16sp" />  -->
        </RelativeLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>