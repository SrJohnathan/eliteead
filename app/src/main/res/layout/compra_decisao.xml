<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ead.elite.app.br.com.appelite.ead.componets.MyTextViewArial
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"

        android:text="valor"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/md_light_blue_600" />



    <ead.elite.app.br.com.appelite.ead.componets.MyTextViewArial
        android:id="@+id/valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nome"
        android:layout_margin="5dp"
        android:text="129"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/md_red_500"
        android:textSize="20sp" />

    <ead.elite.app.br.com.appelite.ead.componets.MyTextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/valor"
        android:layout_margin="5dp"

        android:text="@string/textocompra" />

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/valor">


    </RelativeLayout>


    <ImageButton
        android:id="@+id/confirma"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/texto"
        android:layout_margin="5dp"
        android:background="@drawable/btverde"
        android:textColor="@color/md_white_1000" />


    <ImageButton
        android:id="@+id/nao"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"
        android:layout_below="@+id/texto"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/confirma"
        android:background="@drawable/btvermelho"
        android:textColor="@color/md_white_1000"
        android:textSize="15dp" />


</RelativeLayout>